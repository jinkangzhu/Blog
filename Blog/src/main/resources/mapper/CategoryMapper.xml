<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blog.mapper.CategoryMapper">

    <resultMap id="BaseResultMap" type="category">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="doc_id" property="docId" jdbcType="VARCHAR"/>
        <result column="level" property="level" jdbcType="VARCHAR"/>
        <result column="parent_id" property="parentId" jdbcType="VARCHAR"/>
        <result column="category_name" property="categoryName" jdbcType="VARCHAR"/>
        <result column="created_by" property="createdBy" jdbcType="VARCHAR"/>
        <result column="updated_by" property="updatedBy" jdbcType="VARCHAR"/>
        <result column="created_date" property="createdDate" jdbcType="TIMESTAMP"/>
        <result column="updated_date" property="updatedDate" jdbcType="TIMESTAMP"/>
        <result column="deleted_flag" property="deletedFlag" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, doc_id, level, parent_id, category_name,
        created_by, updated_by, created_date, updated_date, deleted_flag
    </sql>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="com.blog.entity.Category">
        INSERT INTO def_category (
            id, doc_id, level, parent_id, category_name,
            created_by, updated_by, created_date, updated_date, deleted_flag
        ) VALUES (
                     #{id},
                     #{docId},
                     #{level},
                     #{parentId},
                     #{categoryName},
                     #{createdBy},
                     #{updatedBy},
                     #{createdDate},
                     #{updatedDate},
                     #{deletedFlag}
                 )
    </insert>

    <!-- 根据ID删除 -->
    <delete id="deleteById" parameterType="java.lang.String">
        DELETE FROM def_category WHERE id = #{id}
    </delete>

    <!-- 根据ID更新 -->
    <update id="updateById" parameterType="com.blog.entity.Category">
        UPDATE def_category
        <set>
            <if test="docId != null">doc_id = #{docId},</if>
            <if test="level != null">level = #{level},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="categoryName != null">category_name = #{categoryName},</if>
            <if test="createdBy != null">created_by = #{createdBy},</if>
            <if test="updatedBy != null">updated_by = #{updatedBy},</if>
            <if test="createdDate != null">created_date = #{createdDate},</if>
            <if test="updatedDate != null">updated_date = #{updatedDate},</if>
            <if test="deletedFlag != null">deleted_flag = #{deletedFlag},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM def_category
        WHERE id = #{id}
    </select>

    <!-- 查询所有记录 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM def_category
    </select>

    <!-- 根据父ID查询 -->
    <select id="selectByParentId" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM def_category
        WHERE parent_id = #{parentId}
    </select>

    <!-- 根据文档ID查询 -->
    <select id="selectByDocId" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM def_category
        WHERE doc_id = #{docId}
    </select>
</mapper>